{
    "version": 2,
    "name": "My lovely gateway",
    "port": {{.port}},
    "host": [ "http://local.machine" ],
    "cache_ttl": "3600s",
    "timeout": "3s",
    "endpoints": [
        {
            "endpoint": "/static",
            "backend": [
                {
                    "host": [
                        "{{.b4}}"
                    ],
                    "url_pattern": "/"
                }
            ],
            "extra_config": {
                "github.com/vm-affekt/krakend/proxy": {
                    "static": {
                        "strategy": "errored",
                        "data": {
                            "foo": 42,
                            "bar": "foobar"
                        }
                    }
                }
            }
        },
        {
            "endpoint": "/param_forwarding/{name}",
            "method": "POST",
            "headers_to_pass": [
                "Content-Type",
                "Authorization",
                "X-Y-Z"
            ],
            "backend": [
                {
                    "host": [
                        "{{.b1}}"
                    ],
                    "url_pattern": "/{name}"
                }
            ]
        },
        {
            "endpoint": "/combination",
            "backend": [
                {
                    "host": [
                        "{{.b2}}"
                    ],
                    "url_pattern": "/",
                    "is_collection": true,
                    "mapping": {
                        "collection": "posts"
                    }
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/",
                    "mapping": {
                        "email": "personal_email"
                    }
                }
            ]
        },
        {
            "endpoint": "/timeout",
            "timeout": "100ms",
            "backend": [
                {
                    "host": [
                        "{{.b5}}"
                    ],
                    "url_pattern": "/"
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/partial/static",
            "backend": [
                {
                    "host": [
                        "{{.b4}}"
                    ],
                    "url_pattern": "/"
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/"
                }
            ],
            "extra_config": {
                "github.com/vm-affekt/krakend/proxy": {
                    "static": {
                        "strategy": "incomplete",
                        "data": {
                            "foo": 42,
                            "bar": "foobar"
                        }
                    }
                }
            }
        },
        {
            "endpoint": "/detail_error",
            "backend": [
                {
                    "host": [
                        "{{.b4}}"
                    ],
                    "url_pattern": "/",
                    "extra_config": {
                        "github.com/vm-affekt/krakend/http": {
                            "return_error_details": "backend_a"
                        }
                    }
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/",
                    "extra_config": {
                        "github.com/vm-affekt/krakend/http": {
                            "return_error_details": "backend_b"
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/partial",
            "backend": [
                {
                    "host": [
                        "{{.b4}}"
                    ],
                    "url_pattern": "/"
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/querystring-params-test/no-params",
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/no-params"
                }
            ]
        },
        {
            "endpoint": "/querystring-params-test/query-params",
            "querystring_params": [ "a", "b" ],
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/query-params"
                }
            ]
        },
        {
            "endpoint": "/querystring-params-test/url-params/{param}",
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/url-params?p={param}"
                }
            ]
        },
        {
            "endpoint": "/querystring-params-test/all-params",
            "querystring_params": [ "*" ],
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/all-params"
                }
            ]
        },
        {
            "endpoint": "/header-params-test/no-params",
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/no-params"
                }
            ]
        },
        {
            "endpoint": "/header-params-test/filter-params",
            "headers_to_pass": [ "X-Test-1" ],
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/filter-params"
                }
            ]
        },
        {
            "endpoint": "/header-params-test/all-params",
            "headers_to_pass": [ "*" ],
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/all-params"
                }
            ]
        },
        {
          "endpoint": "/sequential/ok/{param}",
          "extra_config": {
            "github.com/vm-affekt/krakend/proxy": {
              "sequential": true
            }
          },
          "backend": [
            {
              "url_pattern": "/provider/{param}",
              "host": [ "{{.b7}}" ],
              "whitelist": [ "random" ]
            },
            {
              "url_pattern": "/recipient/{resp0_random}",
              "host": [ "{{.b7}}" ],
              "whitelist": [ "path" ]
            }
          ]
        },
        {
          "endpoint": "/sequential/ko/first/{param}",
          "extra_config": {
            "github.com/vm-affekt/krakend/proxy": {
              "sequential": true
            }
          },
          "backend": [
            {
              "url_pattern": "/provider/{param}",
              "host": [ "{{.b4}}" ],
              "whitelist": [ "random" ]
            },
            {
              "url_pattern": "/recipient/{resp0_random}",
              "host": [ "{{.b7}}" ],
              "whitelist": [ "path" ]
            }
          ]
        },
        {
          "endpoint": "/sequential/ko/last/{param}",
          "extra_config": {
            "github.com/vm-affekt/krakend/proxy": {
              "sequential": true
            }
          },
          "backend": [
            {
              "url_pattern": "/provider/{param}",
              "host": [ "{{.b7}}" ],
              "whitelist": [ "random" ]
            },
            {
              "url_pattern": "/recipient/{resp0_random}",
              "host": [ "{{.b4}}" ],
              "whitelist": [ "path" ]
            }
          ]
        },
        {
            "endpoint": "/redirect",
            "backend": [
                {
                    "host": [ "{{.b8}}" ],
                    "url_pattern": "/ignore-me"
                }
            ]
        },
        {
            "endpoint": "/found",
            "backend": [
                {
                    "host": [ "{{.b9}}" ],
                    "url_pattern": "/ignore-me"
                }
            ]
        }
    ]
}